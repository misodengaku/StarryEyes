<UserControl x:Class="StarryEyes.Views.WindowParts.Flips.SettingFlip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:behaviors="clr-namespace:StarryEyes.Views.Behaviors"
             xmlns:clr="clr-namespace:System;assembly=mscorlib"
             xmlns:controls="clr-namespace:StarryEyes.Views.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
             xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
             xmlns:flips="clr-namespace:StarryEyes.Views.WindowParts.Flips"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:l="http://schemas.livet-mvvm.net/2011/wpf"
             xmlns:localize="clr-namespace:StarryEyes.Globalization.WindowParts"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:settingFlips="clr-namespace:StarryEyes.Views.WindowParts.Flips.SettingFlips"
             xmlns:smb="clr-namespace:StarryEyes.Views.Messaging.Behaviors"
             xmlns:utils="clr-namespace:StarryEyes.Views.Utils"
             xmlns:vmp="clr-namespace:StarryEyes.ViewModels.WindowParts.Flips"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             d:DataContext="{d:DesignInstance {x:Type vmp:SettingFlipViewModel}}"
             d:DesignHeight="600"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.AnimatedTabControl.xaml" />
                <ResourceDictionary Source="/Themes/FlipContent.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <utils:BooleanToVisibleConverter x:Key="BoolVisibleConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <flips:FlipContent IsOpen="{Binding IsConfigurationActive}"
                       OwnerVisibility="{Binding Visibility,
                                                 Mode=TwoWay,
                                                 RelativeSource={RelativeSource AncestorType={x:Type UserControl},
                                                                                Mode=FindAncestor}}"
                       Visibility="Visible">
        <i:Interaction.Triggers>
            <l:InteractionMessageTrigger Messenger="{Binding Messenger}">
                <smb:TaskDialogInteractionMessageAction />
            </l:InteractionMessageTrigger>
            <l:InteractionMessageTrigger Messenger="{Binding Messenger}">
                <l:OpenFileDialogInteractionMessageAction />
            </l:InteractionMessageTrigger>
            <l:InteractionMessageTrigger Messenger="{Binding Messenger}">
                <l:TransitionInteractionMessageAction />
            </l:InteractionMessageTrigger>
        </i:Interaction.Triggers>
        <Grid Background="{DynamicResource BaseColorBackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button Width="48"
                        Height="48"
                        Margin="-6,-6,12,12"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Template="{DynamicResource MetroBlackCircleButtonTemplate}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <ei:CallMethodAction MethodName="Close" TargetObject="{Binding Mode=OneWay}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <Path Width="25"
                          Height="18"
                          Data="F1 M 36,22L 36,26L 19.75,26L 27,33L 20.5,33L 11,24L 20.5,15L 27,15L 19.75,22L 36,22 Z "
                          Fill="{DynamicResource BaseColorForegroundBrush}"
                          Stretch="Fill" />
                </Button>

            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <ListBox x:Name="SettingCategories"
                         Width="180"
                         HorizontalContentAlignment="Stretch"
                         SelectedIndex="0">
                    <ListBox.Resources>
                        <Style TargetType="{x:Type ListBoxItem}">
                            <Setter Property="Margin" Value="0" />
                            <Setter Property="Padding" Value="0" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Background" Value="{x:Null}" />
                        </Style>
                    </ListBox.Resources>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Background="{DynamicResource BaseColorBackgroundBrush}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <ed:RegularPolygon x:Name="Indicator"
                                                   Width="7"
                                                   Height="5"
                                                   Margin="12,1,0,0"
                                                   VerticalAlignment="Center"
                                                   Fill="Black"
                                                   InnerRadius="1"
                                                   PointCount="3"
                                                   RenderTransformOrigin="0.5,0.5"
                                                   Stretch="Fill"
                                                   Visibility="Collapsed">
                                    <ed:RegularPolygon.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform />
                                            <SkewTransform />
                                            <RotateTransform Angle="90" />
                                            <TranslateTransform />
                                        </TransformGroup>
                                    </ed:RegularPolygon.RenderTransform>
                                </ed:RegularPolygon>
                                <TextBlock x:Name="DisplayText"
                                           Grid.Column="1"
                                           Margin="12,6"
                                           Text="{Binding Text}" />
                            </Grid>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBoxItem}}}" Value="True">
                                    <Setter TargetName="Indicator" Property="Visibility" Value="Visible" />
                                    <Setter TargetName="Indicator" Property="Fill" Value="#1BA1E2" />
                                    <Setter TargetName="DisplayText" Property="Foreground" Value="#1BA1E2" />
                                    <Setter TargetName="DisplayText" Property="Margin" Value="6" />
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <TextBlock Text="{x:Static localize:SettingFlipResources.CategoryAccount}" />
                    <TextBlock Text="{x:Static localize:SettingFlipResources.CategoryTimeline}" />
                    <TextBlock Text="{x:Static localize:SettingFlipResources.CategoryMute}" />
                    <TextBlock Text="{x:Static localize:SettingFlipResources.CategoryInput}" />
                    <TextBlock Text="{x:Static localize:SettingFlipResources.CategoryNotifyConfirm}" />
                    <TextBlock Text="{x:Static localize:SettingFlipResources.CategoryTheme}" />
                    <TextBlock Text="{x:Static localize:SettingFlipResources.CategoryKeyAssign}" />
                    <TextBlock Text="{x:Static localize:SettingFlipResources.CategoryThirdService}" />
                    <TextBlock Text="{x:Static localize:SettingFlipResources.CategoryProxy}" />
                    <TextBlock Text="{x:Static localize:SettingFlipResources.CategoryHighLevel}" />
                    <TextBlock Text="{x:Static localize:SettingFlipResources.CategoryAbout}" />
                </ListBox>
                <Grid Grid.Column="1" Margin="0,6,0,0">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=SettingCategories, Path=SelectedIndex}" Value="0">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Border Margin="16,0" BorderThickness="0">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl AllowDrop="True" ItemsSource="{Binding Accounts}">
                                <i:Interaction.Behaviors>
                                    <behaviors:DropAcceptBehavior Description="{Binding DropDescription}" />
                                </i:Interaction.Behaviors>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="{x:Type vmp:TwitterAccountConfigurationViewModel}">
                                        <Grid Margin="0,0,0,16">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <Grid Background="{DynamicResource TitleBarBackgroundBrush}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <controls:LazyImage Width="42"
                                                                    Height="42"
                                                                    VerticalAlignment="Center"
                                                                    DecodePixelWidth="42"
                                                                    RenderOptions.BitmapScalingMode="HighQuality"
                                                                    UriSource="{Binding ProfileImage}">
                                                    <i:Interaction.Behaviors>
                                                        <behaviors:DragStartBehavior AllowedEffects="Move" DragDropData="{Binding}" />
                                                    </i:Interaction.Behaviors>
                                                </controls:LazyImage>
                                                <TextBlock Grid.Column="1"
                                                           Margin="12,0,8,0"
                                                           HorizontalAlignment="Left"
                                                           VerticalAlignment="Center"
                                                           FontSize="18"
                                                           Foreground="{DynamicResource TitleBarForegroundBrush}"
                                                           Text="{Binding ScreenName,
                                                                          FallbackValue=USER NAME}"
                                                           TextWrapping="Wrap" />
                                                <Button Grid.Column="2"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Stretch"
                                                        Background="#FFE51400"
                                                        Content="{x:Static localize:SettingFlipResources.AccountDelete}"
                                                        Foreground="White"
                                                        Padding="8,0"
                                                        Style="{StaticResource MetroSquareButtonStyle}">
                                                    <i:Interaction.Triggers>
                                                        <i:EventTrigger EventName="Click">
                                                            <ei:CallMethodAction MethodName="Unauthorize" TargetObject="{Binding Mode=OneWay}" />
                                                        </i:EventTrigger>
                                                    </i:Interaction.Triggers>
                                                </Button>
                                            </Grid>
                                            <Border Grid.Row="1"
                                                    Grid.Column="0"
                                                    Height="Auto"
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    BorderBrush="{DynamicResource TitleBarBackgroundBrush}"
                                                    BorderThickness="1,0,1,1">
                                                <StackPanel Background="{x:Null}" Orientation="Vertical">
                                                    <DockPanel Margin="8,8,8,4" Visibility="{Binding CanFallback, Converter={StaticResource BoolVisibleConverter}}">
                                                        <CheckBox Margin="0,0,4,0"
                                                                  VerticalAlignment="Center"
                                                                  Content="{x:Static localize:SettingFlipResources.AccountPostFallback}"
                                                                  IsChecked="{Binding IsFallbackEnabled}" />
                                                        <CheckBox Margin="4"
                                                                  Content="{x:Static localize:SettingFlipResources.AccountFavoriteFallback}"
                                                                  DockPanel.Dock="Right"
                                                                  IsChecked="{Binding FallbackFavorites}"
                                                                  Visibility="{Binding IsFallbackEnabled,
                                                                                       Converter={StaticResource BoolVisibleConverter}}" />
                                                        <ComboBox ItemsSource="{Binding Accounts}"
                                                                  SelectedItem="{Binding FallbackAccount}"
                                                                  Visibility="{Binding IsFallbackEnabled,
                                                                                       Converter={StaticResource BoolVisibleConverter}}">
                                                            <ComboBox.ItemTemplate>
                                                                <DataTemplate>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <controls:LazyImage Width="16"
                                                                                            Height="16"
                                                                                            DecodePixelWidth="16"
                                                                                            RenderOptions.BitmapScalingMode="HighQuality"
                                                                                            UriSource="{Binding ProfileImageUri}" />
                                                                        <TextBlock Text="{Binding ScreenName}" />
                                                                    </StackPanel>
                                                                </DataTemplate>
                                                            </ComboBox.ItemTemplate>
                                                        </ComboBox>
                                                    </DockPanel>
                                                    <StackPanel Margin="8,4" Orientation="Horizontal">
                                                        <CheckBox Margin="0,0,4,0"
                                                                  Content="{x:Static localize:SettingFlipResources.AccountUseUserStreams}"
                                                                  IsChecked="{Binding IsUserStreamsEnabled}" />
                                                        <CheckBox Margin="4,0"
                                                                  Content="{x:Static localize:SettingFlipResources.AccountReceiveRepliesAll}"
                                                                  IsChecked="{Binding ReceiveRepliesAll}"
                                                                  Visibility="{Binding IsUserStreamsEnabled,
                                                                                       Converter={StaticResource BoolVisibleConverter}}" />
                                                        <CheckBox Margin="4,0"
                                                                  Content="{x:Static localize:SettingFlipResources.AccountReceiveFollowingsActivity}"
                                                                  IsChecked="{Binding ReceiveFollowingsActivity}"
                                                                  Visibility="{Binding IsUserStreamsEnabled,
                                                                                       Converter={StaticResource BoolVisibleConverter}}" />
                                                    </StackPanel>
                                                    <CheckBox Margin="8,4,8,8"
                                                              Content="{x:Static localize:SettingFlipResources.AccountMarkMediaSensitive}"
                                                              IsChecked="{Binding IsMarkMediaAsPossiblySensitive}" />
                                                </StackPanel>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                    <TextBlock Grid.Row="1"
                               Margin="16, 2"
                               Text="{x:Static localize:SettingFlipResources.AccountDragDropToChangeOrder}" />
                    <DockPanel Grid.Row="2"
                               Margin="16"
                               LastChildFill="False">
                        <Button DockPanel.Dock="Right" Style="{StaticResource MetroSquareDefaultButtonStyle}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <ei:CallMethodAction MethodName="AddNewAccount" TargetObject="{Binding Mode=OneWay}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <TextBlock Margin="8,0"
                                       Foreground="White"
                                       Text="{x:Static localize:SettingFlipResources.AccountAdd}" />
                        </Button>
                        <Button DockPanel.Dock="Left" Style="{StaticResource MetroSquareButtonStyle}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <ei:CallMethodAction MethodName="ResetApiKeys" TargetObject="{Binding Mode=OneWay}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <TextBlock Margin="8,0" Text="{x:Static localize:SettingFlipResources.AccountResetKey}" />
                        </Button>
                    </DockPanel>
                </Grid>
                <Grid Grid.Column="1" Margin="0,6,0,0">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=SettingCategories, Path=SelectedIndex}" Value="1">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <StackPanel Margin="16,0" Orientation="Vertical">
                        <Grid Margin="0,0,0,8">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0"
                                       Grid.Column="0"
                                       Margin="2,0,6,0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       Text="{x:Static localize:SettingFlipResources.TimelineDisplayType}" />
                            <DockPanel Grid.Row="0"
                                       Grid.Column="1"
                                       LastChildFill="True">
                                <ComboBox SelectedIndex="{Binding TweetDisplayMode, Mode=TwoWay}">
                                    <ComboBox.Items>
                                        <ComboBoxItem Content="{x:Static localize:SettingFlipResources.TimelineDisplaySingleLine}" />
                                        <ComboBoxItem Content="{x:Static localize:SettingFlipResources.TimelineDisplayMixed}" />
                                        <ComboBoxItem Content="{x:Static localize:SettingFlipResources.TimelineDisplayMultiline}" />
                                    </ComboBox.Items>
                                </ComboBox>
                            </DockPanel>
                            <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       Margin="2,8,6,0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       Text="{x:Static localize:SettingFlipResources.TimelineScrollLockType}" />
                            <ComboBox Grid.Row="1"
                                      Grid.Column="1"
                                      Margin="0,8,0,0"
                                      SelectedIndex="{Binding ScrollLockStrategy,
                                                              Mode=TwoWay}">
                                <ComboBox.Items>
                                    <ComboBoxItem Content="{x:Static localize:SettingFlipResources.TimelineScrollLockUnlock}" />
                                    <ComboBoxItem Content="{x:Static localize:SettingFlipResources.TimelineScrollLockAlways}" />
                                    <ComboBoxItem Content="{x:Static localize:SettingFlipResources.TimelineScrollLockExplicit}" />
                                    <ComboBoxItem Content="{x:Static localize:SettingFlipResources.TimelineScrollLockWhenScrolled}" />
                                    <ComboBoxItem Content="{x:Static localize:SettingFlipResources.TimelineScrollLockMouseOver}" />
                                </ComboBox.Items>
                            </ComboBox>
                            <TextBlock Grid.Row="2"
                                       Grid.Column="0"
                                       Margin="2,8,6,0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       Text="{x:Static localize:SettingFlipResources.TimelineIconQualityType}" />
                            <ComboBox Grid.Row="2"
                                      Grid.Column="1"
                                      Margin="0,8,0,0"
                                      SelectedIndex="{Binding TimelineIconResolution,
                                                              Mode=TwoWay}">
                                <ComboBox.Items>
                                    <ComboBoxItem Content="{x:Static localize:SettingFlipResources.TimelineIconQualityOriginal}" />
                                    <ComboBoxItem Content="{x:Static localize:SettingFlipResources.TimelineIconQualityHigh}" />
                                    <ComboBoxItem Content="{x:Static localize:SettingFlipResources.TimelineIconQualityOptimized}" />
                                    <ComboBoxItem Content="{x:Static localize:SettingFlipResources.TimelineIconQualityMinimum}" />
                                    <ComboBoxItem Content="{x:Static localize:SettingFlipResources.TimelineIconQualityNone}" />
                                </ComboBox.Items>
                            </ComboBox>
                        </Grid>
                        <CheckBox Margin="0,0,0,8"
                                  VerticalAlignment="Top"
                                  Content="{x:Static localize:SettingFlipResources.TimelineScrollByPixel}"
                                  IsChecked="{Binding IsScrollByPixel}" />
                        <CheckBox Margin="20,0,0,8"
                                  VerticalAlignment="Top"
                                  Content="{x:Static localize:SettingFlipResources.TimelineAnimateNewTweet}"
                                  IsChecked="{Binding IsAnimateNewTweet}"
                                  IsEnabled="{Binding IsScrollByPixel}" />
                        <CheckBox Margin="0,0,0,8"
                                  VerticalAlignment="Top"
                                  Content="{x:Static localize:SettingFlipResources.TimelineAllowFavoriteMyself}"
                                  IsChecked="{Binding IsAllowFavoriteMyself}" />
                        <CheckBox Margin="0,0,0,8"
                                  VerticalAlignment="Top"
                                  Content="{x:Static localize:SettingFlipResources.TimelineShowThumbnails}"
                                  IsChecked="{Binding ShowThumbnail}" />
                        <CheckBox Margin="20,0,0,8"
                                  VerticalAlignment="Top"
                                  Content="{x:Static localize:SettingFlipResources.TimelineOpenTwitterPicWithOriginalSize}"
                                  IsChecked="{Binding OpenTwitterImageWithOriginalSize}"
                                  IsEnabled="{Binding ShowThumbnail}" />
                        <StackPanel Margin="0,8" Orientation="Horizontal">
                            <TextBlock Margin="0,0,4,0"
                                       VerticalAlignment="Center"
                                       Text="{x:Static localize:SettingFlipResources.TimelineSearchLanguage}" />
                            <ComboBox Width="80"
                                      IsEditable="True"
                                      ItemsSource="{Binding SupportedLanguages,
                                                            Mode=OneTime}"
                                      Text="{Binding SearchLanguage,
                                                     UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock Margin="4,0"
                                       VerticalAlignment="Center"
                                       Text="{Binding SearchLanguageDescription,
                                                      Mode=OneWay}" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="1" Margin="0,6,0,0">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=SettingCategories, Path=SelectedIndex}" Value="2">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid Margin="16,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Border Grid.ColumnSpan="2"
                                Background="{DynamicResource BaseColorForegroundBrush}"
                                Opacity="0.05" />
                        <TextBlock Grid.Column="0"
                                   Margin="24,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Text="{x:Static localize:SettingFlipResources.MuteHeader}" />
                        <TextBlock Grid.Column="0"
                                   Margin="8,8,8,4"
                                   HorizontalAlignment="Right">
                            <Hyperlink Command="{Binding OpenQueryReferenceCommand}">
                                <Run Text="{x:Static localize:GeneralFlipResources.TabConfigQueryHelp}" />
                            </Hyperlink>
                        </TextBlock>
                        <Button Grid.Column="1"
                                HorizontalAlignment="Right"
                                Content="{x:Static localize:SettingFlipResources.MuteReset}"
                                Style="{StaticResource MetroSquareButtonStyle}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <ei:CallMethodAction MethodName="ResetFilter" TargetObject="{Binding}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                    </Grid>
                    <Border Grid.Row="1"
                            Margin="16,0"
                            Background="{DynamicResource BaseColorForegroundBrush}"
                            Opacity="0.05" />
                    <controls:QueryEditor Grid.Row="1"
                                          Margin="16,0"
                                          Background="Transparent"
                                          Foreground="{DynamicResource BaseColorForegroundBrush}"
                                          IsSourceFilterEditable="False"
                                          QueryText="{Binding QueryString,
                                                              Mode=TwoWay}" />
                    <TextBlock Grid.Row="2"
                               Margin="16,0"
                               Background="#60E51400"
                               Padding="4"
                               Text="{Binding ExceptionMessage}"
                               Visibility="{Binding FoundError,
                                                    Converter={StaticResource BoolVisibleConverter}}" />
                    <TextBlock Grid.Row="3"
                               Margin="16,0,16,16"
                               VerticalAlignment="Top"
                               Foreground="White"
                               Padding="4"
                               TextWrapping="Wrap">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Background" Value="#FF1BA1E2" />
                                <Setter Property="Text" Value="{x:Static localize:GeneralFlipResources.TabConfigQueryValid}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding FoundError}" Value="True">
                                        <Setter Property="Background" Value="#FFE51400" />
                                        <Setter Property="Text" Value="{x:Static localize:GeneralFlipResources.TabConfigQueryContainsError}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <StackPanel Grid.Row="4" Orientation="Vertical">
                        <CheckBox Margin="16,0,16,8"
                                  Content="{x:Static localize:SettingFlipResources.MuteUseLightweightMute}"
                                  IsChecked="{Binding UseLightweightMute}" />
                        <TextBlock Margin="16,0,16,12"
                                   Text="{x:Static localize:SettingFlipResources.MuteLightweightMuteDescription}"
                                   TextWrapping="Wrap" />
                        <GroupBox Margin="16,0,16,16" Header="{x:Static localize:SettingFlipResources.MuteDetailSettings}">
                            <StackPanel>
                                <TextBlock Margin="16,8" Text="{x:Static localize:SettingFlipResources.MuteDetailDescription}" />
                                <CheckBox Margin="16,8"
                                          Content="{x:Static localize:SettingFlipResources.MuteBlockingUsers}"
                                          IsChecked="{Binding IsMuteBlockingUsers}" />
                                <CheckBox Margin="16,8,16,16"
                                          Content="{x:Static localize:SettingFlipResources.MuteNoRetweets}"
                                          IsChecked="{Binding IsMuteNoRetweetUsersRetweet}" />
                            </StackPanel>
                        </GroupBox>

                    </StackPanel>
                </Grid>
                <Grid Grid.Column="1" Margin="0,6,0,0">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=SettingCategories, Path=SelectedIndex}" Value="3">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    <StackPanel Margin="16, 0" Orientation="Vertical">
                        <CheckBox Margin="0"
                                  Content="{x:Static localize:SettingFlipResources.InputBacktrackFallback}"
                                  IsChecked="{Binding IsBacktrackFallback}" />
                        <TextBlock Margin="20,8,0,8"
                                   Text="{x:Static localize:SettingFlipResources.InputBacktrackDescription}"
                                   TextWrapping="Wrap" />
                        <CheckBox Margin="0,8"
                                  Content="{x:Static localize:SettingFlipResources.InputSuggestEnabled}"
                                  IsChecked="{Binding IsInputSuggestEnabled}" />
                        <StackPanel Margin="20,8,0,8"
                                    Orientation="Horizontal"
                                    Visibility="{Binding IsInputSuggestEnabled,
                                                         Converter={StaticResource BoolVisibleConverter}}">
                            <TextBlock Margin="0,0,4,0" Text="{x:Static localize:SettingFlipResources.InputUserSuggestMode}" />
                            <ComboBox SelectedIndex="{Binding InputUserSuggestActionIndex}">
                                <ComboBox.Items>
                                    <ComboBoxItem Content="{x:Static localize:SettingFlipResources.InputUserSuggestAll}" />
                                    <ComboBoxItem Content="{x:Static localize:SettingFlipResources.InputUserSuggestRelated}" />
                                    <ComboBoxItem Content="{x:Static localize:SettingFlipResources.InputUserSuggestFollowingsOnly}" />
                                </ComboBox.Items>
                            </ComboBox>
                        </StackPanel>
                        <CheckBox Margin="0,8"
                                  Content="{x:Static localize:SettingFlipResources.InputSuppressTagBindInReply}"
                                  IsChecked="{Binding SuppressTagBindInReply}" />
                        <CheckBox Margin="0,8"
                                  Content="{x:Static localize:SettingFlipResources.InputRestorePreviousStashed}"
                                  IsChecked="{Binding RestorePreviousStashed}" />
                        <StackPanel Margin="0,8" Orientation="Horizontal">
