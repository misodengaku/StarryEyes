             xmlns:triggers="clr-namespace:StarryEyes.Views.Triggers"
             xmlns:utils="clr-namespace:StarryEyes.Views.Utils"
             xmlns:windowParts="clr-namespace:StarryEyes.Globalization.WindowParts"
             x:Name="InputAreaRoot"
             MaxHeight="200"
             d:DataContext="{d:DesignInstance Type={x:Type inputting:InputViewModel}}"
             d:DesignHeight="150"
             d:DesignWidth="900"
             mc:Ignorable="d">
