        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="ImageAttachControl">
                <VisualState x:Name="MouseOverState">
                    <Storyboard>
                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="Border" Storyboard.TargetProperty="(UIElement.Opacity)">
                            <DiscreteDoubleKeyFrame KeyTime="0" Value="0.4" />
                        </DoubleAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="MouseOutState" />
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid Margin="4,0,0,0"
              HorizontalAlignment="Left"
              VerticalAlignment="Top">
            <Grid.Style>
                <Style TargetType="{x:Type Grid}">
                    <Setter Property="Width" Value="24" />
                    <Setter Property="Height" Value="24" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsOpening}" Value="True">
                            <Setter Property="Width" Value="48" />
                            <Setter Property="Height" Value="48" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <Button HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch"
                    BorderThickness="0"
                    DataContext="{Binding AccountSelectorViewModel}"
                    Focusable="False"
                    Padding="0"
                    Style="{DynamicResource MetroSquareUnfocusableFlatButton}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <ei:CallMethodAction MethodName="SelectAccounts" TargetObject="{Binding Mode=OneWay}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <Button.ToolTip>
                    <TextBlock>
                        <Run Text="{Binding AuthInfoScreenNames, Mode=OneWay}" />
                        <LineBreak />
                        <Run Text="{x:Static windowParts:InputAreaResources.ClickToSelectAccount}" />
                    </TextBlock>
                </Button.ToolTip>
                <!--  Clickable border  -->
                <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Border.Style>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Opacity" Value="1.0" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsBoundAccountExists}" Value="False">
                                    <Setter Property="Background" Value="{StaticResource MetroCyanBrush}" />
                                    <Setter Property="Opacity" Value="0.4" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <ItemsControl FocusVisualStyle="{x:Null}"
                                  ItemsSource="{Binding Accounts}"
                                  d:IsHidden="True">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="{Binding AuthInfoGridRowColumn}" Rows="{Binding AuthInfoGridRowColumn}" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <controls:LazyImage RenderOptions.BitmapScalingMode="Fant" UriSource="{Binding ProfileImageUri}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
            </Button>
            <Border Grid.Column="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Transparent"
                    BorderBrush="{StaticResource MetroCrimsonBrush}"
                    BorderThickness="4"
                    DataContext="{Binding AccountSelectorViewModel}"
                    Visibility="{Binding IsSynchronizedWithTab,
                                         Converter={StaticResource BooleanToInvisibleConverter}}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseLeftButtonDown">
                        <ei:CallMethodAction MethodName="SynchronizeWithTab" TargetObject="{Binding}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <Border.ToolTip>
                    <TextBlock Text="{x:Static windowParts:InputAreaResources.ClickToSelectAccount}" />
                </Border.ToolTip>
            </Border>
        </Grid>
        <Grid Grid.Column="1"
              Margin="4,0"
              Visibility="{Binding IsOpening,
                                   Converter={StaticResource BooleanToInvisibleConverter}}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseLeftButtonDown">
